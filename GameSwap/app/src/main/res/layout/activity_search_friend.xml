<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="cmput301t4.gameswap.Activities.SearchFriendActivity"
    android:weightSum="1"
  >


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Friends"
        android:textSize="@dimen/activity_horizontal_margin"
        android:id="@+id/textView8"
        android:gravity="center"
        android:layout_weight="0.31" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="345dp"
        android:id="@+id/listView"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.87" />
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="51dp">

        <EditText
            android:id="@+id/searchFriendEditText"
            android:layout_width="277dp"
            android:layout_height="wrap_content"
            android:hint="@string/searchFriend"

            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/textView18"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/searchFriendEditText" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Search"
            android:id="@+id/searchfriendbutton"
            android:onClick="searchFriendButton"
            android:layout_alignParentEnd="true"
            android:layout_alignBottom="@+id/searchFriendEditText"
            android:layout_alignTop="@+id/searchFriendEditText"
            android:layout_toEndOf="@+id/searchFriendEditText"
            android:layout_gravity="right" />

    </RelativeLayout>
</LinearLayout>
